<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <import type="android.view.View"/>

        <import type="kr.wayde.githubsearch.R" />

        <variable
            name="user"
            type="kr.wayde.githubserach.domain.entity.GithubUser" />

        <variable
            name="viewModel"
            type="kr.wayde.githubsearch.ui.search.UserSearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/avatarContainer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.facebook.drawee.view.SimpleDraweeView
                app:imageUrl="@{user.avatarUrl}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@{user.login}"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/avatarContainer"
            app:layout_constraintTop_toTopOf="@id/avatarContainer"
            app:layout_constraintBottom_toBottomOf="@+id/avatarContainer"
            tools:text="Login" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_favorite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>